{
  "manifest_version": 3,
  "name": "Voyons Voir Add",
  "version": "0.0.1",
  "description": "Extension pour améliorer l'expérience utilisateur sur WhatsApp.",
  "icons": {
    "16": "icons/voyons-logo16x16.png",
    "32": "icons/voyons-logo32x32.png",
    "48": "icons/voyons-logo48x48.png",
    "128": "icons/voyons-logo128x128.png"
  },
  "permissions": ["scripting", "activeTab"],
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "host_permissions": ["https://web.whatsapp.com/*"],
  "web_accessible_resources": [
    {
      "resources": ["images/*.*"],
      "matches": ["<all_urls>"]
    }
  ]
}
